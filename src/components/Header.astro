<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		border-bottom: 2px solid var(--accent-dark);
	}
	h2 {
		margin: 0;
		font-family: sans-serif;
		z-index: 2;
		font-size: 2rem;
		color: #53a019;
		font-weight: bold;
		-webkit-text-fill-color: transparent;
		-webkit-text-stroke-width: 1px;
		-webkit-text-stroke-color: #53a019;
		text-shadow: 3px 3px #53a019;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
